#!/usr/bin/env php
<?php

/*
 * bin/gendiff tests/fixtures/testBefore.json tests/fixtures/testAfter.json
 * bin/gendiff tests/fixtures/testBefore.json tests/fixtures/testAfter.json --format pretty
 * bin/gendiff tests/fixtures/testBefore.json tests/fixtures/testAfter.json --format plain
 * bin/gendiff tests/fixtures/testBefore.json tests/fixtures/testAfter.json --format json
*/

use function DifferenceCalculator\genDiff;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC
Generate diff.
Usage:
  gendiff (-h|--help)
  gendiff <firstFile> <secondFile> [--format <fmt>]
Options:
  -h --help                     Show this screen
  --format <fmt>                Report format [default: pretty]
DOC;

$args = Docopt::handle($doc);

genDiff($args['<firstFile>'], $args['<secondFile>'], $args['--format']);
