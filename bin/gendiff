#!/usr/bin/env php
<?php

//bin/gendiff tests/fixtures/testBefore.json tests/fixtures/testAfter.json
//bin/gendiff --format pretty tests/fixtures/testBefore.json tests/fixtures/testAfter.json
//bin/gendiff --format plain tests/fixtures/testBefore.json tests/fixtures/testAfter.json
//bin/gendiff --format json tests/fixtures/testBefore.json tests/fixtures/testAfter.json

use function DifferenceCalculator\diff;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC
Generate diff.
Usage:
  gendiff (-h|--help)
  gendiff [--format <fmt>] <firstFile> <secondFile>
Options:
  -h --help                     Show this screen
  --format <fmt>                Report format [default: pretty]
DOC;

$args = Docopt::handle($doc);

diff($args['--format'], $args['<firstFile>'], $args['<secondFile>']);
